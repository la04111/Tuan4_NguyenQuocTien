@model Tuan4_NguyenQuocTien.Models.Sach

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<div class="col-sm-12 col-md-12">
    
    <div class="caption">
        <p>Mã loại: @Html.DisplayFor(model => model.maloai)</p>
        <p>Tên sách: @Html.DisplayFor(model => model.tensach)</p>
        <p>Hình</p>
            <img width="200" height="300" src="@Html.DisplayFor(model =>model.hinh)" alt="thumbnail" />
        
        <p>Giá bán: @Html.DisplayFor(model => model.giaban)</p>
        <p>Ngày cập nhật: @Html.DisplayFor(model => model.ngaycapnhat)</p>
        <p>Số lượng tồn: @Html.DisplayFor(model => model.soluongton)</p>
        <p>
            <a href="#" class="btn btn-primary" role="button">Buy</a>
            @Html.ActionLink("Back", "ListSach", "", new { @class = "btn btn-info" })
        </p>
    </div>
</div>
